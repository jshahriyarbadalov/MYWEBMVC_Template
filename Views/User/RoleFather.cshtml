
@{
    ViewBag.Title = "RoleFather";
}

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Add Role Father Page
                </div>
                <div class="block-controls">
                    <a href="/User/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>

                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/User/RoleFather" method="post" role="form">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Username: </label>
                            <select name="Username" class="form-control">
                                @foreach (MembershipUser mu in ViewBag.Users)
                                {
                                    <option value="@mu.UserName">@mu.UserName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Role: </label>
                            <select name="RoleName" class="form-control">
                                @foreach (string rol in ViewBag.Roles)
                                {
                                    <option value="@rol">@rol</option>
                                }
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

