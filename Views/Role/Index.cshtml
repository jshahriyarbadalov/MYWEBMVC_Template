
@{
    ViewBag.Title = "Roles";
}

@model List<string>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Roles
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Role/Add" class="btn btn-success rounded">New Role</a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Role Name</th>
                            <th>Delete</th>
                        </tr>
                        </thead>

                        <tbody>
                        @foreach (string rol in Model)
                        {
                            <tr>
                                <td>@rol</td>
                                <td><a href="#" class="btn btn-danger rolDelete" data-rolName="@rol">Delete</a></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

