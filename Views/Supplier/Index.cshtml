
@{
    ViewBag.Title = "Supplier";
}

@using MYWEBMVC_Template.Models
@model List<Supplier>

@section head {
    <style>
        #small-modal {
            z-index: 99999999;
        }
        .warning{
            color: red;
        }
    </style>
}

@section body{
    <div class="modal fade small-modal" id="small-modal" tabindex="-1" role="dialog" aria-labelledby="small-modal-label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" data-border-top="multi">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="small-modal-label">Delete Supplier</h4>
                </div>
                <div class="modal-body">
                    <p class="message"></p>
                    <p class="warning"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                    <button type="button" class="btn btn-danger supDelete">Yes</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
}



<div class="col-md-12">
    <div class="block" style="overflow-x: scroll">
        <div class="block-heading">
            <div class="main-text h2">
                Supplier
            </div>
            <div class="block-controls">
                <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                <a href="/Supplier/Add" class="btn btn-success rounded">New Supplier</a>
            </div>
        </div>
        <div class="block-content-outer">
            <div class="block-content-inner">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Company Name</th>
                            <th>Contact Name</th>
                            <th>ContactTitle</th>
                            <th>Address</th>
                            <th>City</th>
                            <th>Region</th>
                            <th>Postal Code</th>
                            <th>Country</th>
                            <th>Phone</th>
                            <th>Fax</th>
                            <th>Current</th>
                            <th>Delete</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (Supplier sup in Model)
                        {
                            <tr>
                                <td>@sup.CompanyName</td>
                                <td>@sup.ContactName</td>
                                <td>@sup.ContactTitle</td>
                                <td>@sup.Address</td>
                                <td>@sup.City</td>
                                <td>@sup.Region</td>
                                <td>@sup.PostalCode</td>
                                <td>@sup.Country</td>
                                <td>@sup.Phone</td>
                                <td>@sup.Fax</td>
                                <td><a href="/Supplier/Current/@sup.SupplierID" class="btn btn-primary">Current</a></td>
                                <td><button class="btn btn-danger modalAc" data-toggle="modal" data-target="#small-modal" data-compName="@sup.CompanyName" data-id="@sup.SupplierID">Delete</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

@section scripts
{
   
    <script>
        $(".modalAc").click(function() {
            var compName = $(this).data("compName");
            $(".modal-body>p.message").html(compName + ", Are you delete Supplier?");
            var id = $(this).data("id");
            $(".supDelete").data("id", id);
        });
        $(".supDelete").click(function() {
            var id = $(this).data("id");
            $.ajax({
                type: "POST",
                url: "/Supplier/Delete" + id,
                success: function(status) {
                    if (status=="success") {
                        window.location.replace("/Supplier/Index");
                    } else {
                        $(".modal-body>p.warning").html("Error for delete Supplier. Please, try again!");
                    }
                   
                }
               
            });
        });
    </script>
}
