
@{
    ViewBag.Title = "Product Detail";
}

@using MYWEBMVC_Template.Models

@model Product

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Products
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Product/AddProduct" class="btn btn-success rounded">New Product</a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Supplier</th>
                                <th>Category</th>
                                <th>Quantity Per Unit</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>New Units On Order</th>
                                <th>Reorder Level</th>
                                <th>Discontinued</th>

                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.ProductName</td>
                                @if (Model.Supplier == null)
                                {
                                    <td></td>
                                }
                                else
                                {
                                    <td><span class="label label-primary">@Model.Supplier.CompanyName</span></td>
                                }
                                @if (Model.Category == null)
                                {
                                    <td></td>
                                }
                                else
                                {
                                    <td><span class="label label-info">@Model.Category.CategoryName</span></td>
                                }
                                <td>@Model.QuantityPerUnit</td>
                                <td>@Model.UnitPrice</td>
                                <td>@Model.UnitsInStock</td>
                                <td>@Model.UnitsOnOrder</td>
                                <td>@Model.ReorderLevel</td>
                                @if (Model.Discontinued)
                                {
                                    <td><span class="label label-danger">No stock</span></td>
                                }
                                else
                                {
                                    <td>
                                        <span class="label label-success">In Stock</span>
                                    </td>
                                }

                                <td><a href="/Product/Delete/@Model.ProductID" class="btn btn-danger rounded">Delete</a></td>

                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>