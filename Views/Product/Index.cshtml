
@{
    ViewBag.Title = "Products";
}

@using MYWEBMVC_Template.Models
@model List<Product>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Products
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Product/AddProduct" class="btn btn-success rounded">New Product</a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Supplier</th>
                                <th>Category</th>
                                <th>Quantity Per Unit</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>New Units On Order</th>
                                <th>Reorder Level</th>
                                <th>Discontinued</th>
                                <th>Add basket</th>
                                <th>Details</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Product item in Model)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    @if (item.Supplier == null)
                                    {
                                        <td></td>
                                    }
                                    else
                                    {
                                        <td><span class="label label-primary">@item.Supplier.CompanyName</span></td>
                                    }
                                    @if (item.Category == null)
                                    {
                                        <td></td>
                                    }
                                    else
                                    {
                                        <td><span class="label label-info">@item.Category.CategoryName</span></td>
                                    }
                                    <td>@item.QuantityPerUnit</td>
                                    <td>@item.UnitPrice</td>
                                    <td>@item.UnitsInStock</td>
                                    <td>@item.UnitsOnOrder</td>
                                    <td>@item.ReorderLevel</td>
                                    @if (item.Discontinued)
                                    {
                                        <td><span class="label label-danger">No stock</span></td>
                                    }
                                    else
                                    {
                                        <td>
                                            <span class="label label-success">In Stock</span>
                                        </td>
                                    }
                                    <td><a class="btn btn-default addBasket" data-id="@item.ProductID" href="#">Add basket</a></td>
                                    <td><a class="btn btn-primary rounded" href="/Product/ProductDetail?id=@item.ProductID&name=@item.ProductName">Details</a></td>
                                    <td><a href="/Product/Delete/@item.ProductID" class="btn btn-danger rounded">Delete</a></td>

                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
   
    <script>

        $(".addBasket").click(function () {
            var id = $(this).data("id");
            $.ajax({
                type: "POST",
                url: "/Product/AddBasket/" + id,
                success: function () {
                    alert("Product Added Basket!");
                },
                error: function () {
                    alert("Product not added error.");
                }
            });

        });
    </script>
}